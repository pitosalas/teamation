
<%= simple_form_for Preference.new do |form| %>
    <%= form.error_notification %>
  <%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>

  <%= form.input :subject_matter_proficiency, :label => "Subject Matter Proficiency: ",  as: :radio_buttons, collection: Preference::LEVELS %>
  <%= form.hidden_field :student_id, :value => current_user.id %>
  <%= form.hidden_field :course_id, :value => @course.id %>

  <%= form.input :time_zone %>

  <%= form.label 'Dream Partner' %>
  <%= form.collection_select :dream_partner, @course.students.order(firstname: :asc, lastname: :asc), :id, :full_name, {:include_blank => true} %>
  <br>
  <%= form.label 'Select Your Prefered Time for Group Meeting'%> <sup>*</sup>
  <%= form.input :schedule, as: :check_boxes, collection: Date::DAYNAMES, :include_hidden => false, :multiple => true  %>
  <!-- <% Date::DAYNAMES.each do |day| %>
    <%= form.check_box :schedule, {}, day %>
    <%= day %>
  <% end %> -->

  <div class="form-actions">
    <%= form.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
