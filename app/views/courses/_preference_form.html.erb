<%= simple_form_for Preference.new do |form| %>
    <%= form.input :subject_matter_proficiency, :label => "Subject Matter Proficiency: ",  as: :radio_buttons, collection: Preference::LEVELS %>
    <%= form.hidden_field :student_id, :value => current_user.id %>
    <%= form.hidden_field :course_id, :value => @course.id %>

    <%= form.button :submit, class: "btn btn-primary" %>
<% end %>