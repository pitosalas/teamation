<body class='view4'>
  <div class='container profile-container' id="classroom" >
    <%= render partial: "course_info" %>
    <div class="col-md-6 col-md-offset-3">

      <%= form_with(model: @course) do |form| %>
        <% if @course.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(course.errors.count, "error") %> prohibited this form from being saved:</h2>

            <ul>
              <% course.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= label_tag(:maximum_group_member, "Maximum number of Students in a Group") %>
        <%= form.select :maximum_group_member, ((0..10).map {|i| [i,i] }) %>
        <%= label_tag(:maximum_group_member, "Minimum number of Students in a Group") %>
        <%= form.select :minimum_group_member, ((0..10).map {|i| [i,i] }) %>

        <%= submit_tag("Submit") %>

      <% end %>

    </div>
  </div>
